<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbk"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/bcBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/bc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bcBtn"
        android:layout_marginTop="107dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/WLBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="add wallet"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btn3ds"
        android:layout_alignStart="@+id/btn3ds" />

    <Button
        android:id="@+id/WlPay"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Wallet pay"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/WLBtn"
        android:layout_alignLeft="@+id/WLBtn"
        android:layout_alignStart="@+id/WLBtn" />

    <Button
        android:id="@+id/btn3ds"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/mc"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/WLBtn"
        android:layout_alignLeft="@+id/bcBtn"
        android:layout_alignStart="@+id/bcBtn" />

</RelativeLayout>
